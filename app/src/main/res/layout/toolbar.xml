<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
    app:contentInsetEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/counter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/toolbar_counterbutton_weight"
            android:text="@string/counter_string"
            android:textAllCaps="false"
            app:cornerRadius="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:textSize="18sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scoresheet_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/toolbar_scoresheetbutton_weight"
            android:text="@string/scoresheet_string"
            android:textAllCaps="false"
            app:cornerRadius="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:textSize="18sp"/>

    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>