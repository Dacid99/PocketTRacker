<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/score_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@id/score_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/turnnumber_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/turnnumber_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player1_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player1_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player2_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player2_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/ballsOnTable_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/ballsOnTable_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/switchReason_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/switchReason_columnlabel"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/turnnumber_subcolumn_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/turnnumber_subcolumnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player1Increment_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player1Increment_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player1Total_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player1Total_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player2Increment_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player2Increment_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/player2Total_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/player2Total_columnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/ballsOnTable_subcolumn_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/ballsOnTable_subcolumnlabel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/switchReason_column_weight"
                android:background="@drawable/cell_separator"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/switchReason_subcolumnlabel"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>


    <ScrollView
        android:id="@+id/score_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/scoresheet_scrollview_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_header">

        <TableLayout
            android:id="@+id/score_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TableLayout>

    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/player1Statistics_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/player2Statistics_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/player1statistics_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/player1statistics_innings"
                android:text="Player 1"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/player1statistics_innings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player1statistics_name"
                app:layout_constraintBottom_toTopOf="@+id/player1statistics_maxrun"
                android:gravity="center" />

            <TextView
                android:id="@+id/player1statistics_maxrun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player1statistics_innings"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/player2Statistics_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1Statistics_card"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/player2statistics_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/player2statistics_innings"
                android:text="Player 2"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/player2statistics_innings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player2statistics_name"
                app:layout_constraintBottom_toTopOf="@+id/player2statistics_maxrun"
                android:gravity="center" />

            <TextView
                android:id="@+id/player2statistics_maxrun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player2statistics_innings"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
