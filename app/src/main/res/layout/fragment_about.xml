<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_page">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/about_draghandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_draghandle"
        android:layout_margin="@dimen/about_sidemargin"
        android:contentDescription="app icon"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/about_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/about_icon"
        android:layout_below="@id/about_draghandle"
        android:layout_marginEnd="@dimen/about_sidemargin">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/textSize" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_versionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_appname"
            android:text="versionname"
            android:textSize="@dimen/smallTextSize"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_versionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_versionName"
            android:text="versioncode"
            android:textSize="@dimen/smallTextSize"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_app_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_app_info"
        android:layout_marginStart="@dimen/about_sidemargin"
        android:layout_marginEnd="@dimen/about_sidemargin">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="author"
            android:textSize="@dimen/smallTextSize"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_author"
            android:layout_marginTop="16dp"
            android:text="@string/thankyou_string"
            android:textSize="@dimen/smallTextSize"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/about_gitlab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_thankyou"
            android:layout_marginBottom="16dp"
            android:text="gitlab"
            android:autoLink="web"
            android:linksClickable="true"
            android:textSize="@dimen/smallTextSize"/>

    </RelativeLayout>
</RelativeLayout>