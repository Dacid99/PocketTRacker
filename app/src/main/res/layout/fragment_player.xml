<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment"
    android:minWidth="@dimen/playerFragment_width"
    android:minHeight="@dimen/playerFragment_height" >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playerCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/left_toOtherPlayerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/playerNameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/playerClubLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/player_name_hint"
                    android:textSize="@dimen/textSize"
                    android:gravity="center"
                    app:hintEnabled="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/right_swapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/playerClubLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerNameLayout"
                android:text="@string/right_swap_string" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/left_swapButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintBottom_toTopOf="@+id/playerClubLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerNameLayout"
                android:text="@string/left_swap_string"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/playerClubLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/playerScore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerNameLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerClub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/player_club_hint"
                    android:textSize="@dimen/textSize"
                    app:hintEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/playerScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="@string/player_score_format"
                android:textColor="@color/score_color"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/playerStats_table"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerClubLayout" />

            <TableLayout
                android:id="@+id/playerStats_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerScore">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/inningsPlayer_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/scoreTextSize"
                        android:gravity="center"
                        android:text="test"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/meanInningPlayer_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/scoreTextSize"
                        android:gravity="center"
                        android:text="test" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/maxRunPlayer_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/scoreTextSize"
                        android:gravity="center"
                        android:text="test"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/meanRunPlayer_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/scoreTextSize"
                        android:gravity="center"
                        android:text="test" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/right_toOtherPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:paddingBottom="12dp"
        android:text="@string/right_arrow_string"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_toOtherPlayerButton"
        app:layout_constraintTop_toBottomOf="@+id/playerCard" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/left_toOtherPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:paddingBottom="12dp"
        android:text="@string/left_arrow_string"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_toOtherPlayerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerCard" />

</androidx.constraintlayout.widget.ConstraintLayout>